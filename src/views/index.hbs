<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Video Tutorials</h1>
        <p class="lead">Start Self-Study Today: It'll Change Your Life</p>
    </div>
</div>

<div>
    <h1 class="text-center">All Courses</h1>
    <div class="container mt-3">

        <div class="card-deck d-flex justify-content-center">
            {{#each course}}
            <div class="card mb-4">
                <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
                <div class="card-body">
                    <h4 class="card-title">{{title}}</h4>
                </div>
                <div class="card-footer">
                    <a href="/courses/{{_id}}"><button type="button" class="btn btn-info">Details</button></a>
                    <small class="float-right">Date...</small>
                </div>
            </div>
            {{else}}
            <h4 class="text-center">No courses...</h4>
            {{/each}}
        </div>
    </div>
</div>